<Window x:Class="MessengerClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="500" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Chatlist -->
        <ListBox Name="ChatList" Grid.Column="0"/>

        <!-- Message area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <ListBox Name="MessageList" Grid.Row="0"/>

            <DockPanel Grid.Row="1">
                <TextBox x:Name="MessageBox" Width="200" Height="30" DockPanel.Dock="Left" Margin="5" Text=""/>
                <Button Content="Send" Width="80"
                        DockPanel.Dock="Right"
                        Click="SendMessage_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
